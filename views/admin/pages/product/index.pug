extends ../../layouts/index.pug


block main
 h1 Danh sách sản phẩm
    .card.mb-3  
       .card-header Bộ lọc và tìm kiếm
       .card-body
         
         .col-6
           button(
                class="btn btn-sm m1-1 btn-outline-success active"
                  button-status=""
             ) Tất cả
           button(
                class="btn btn-sm m1-1 btn-outline-success "
                  button-status="active"
             ) Hoạt động
           button(
                class="btn btn-sm m1-1 btn-outline-success "
                  button-status="inactive"
             ) Dừng hoạt động
        
         
          

    .card.mb-3  
       .card-header Danh sách sản phẩm ADMIN
       .card-body      
       table.table.table-hover.table-light
          thead
            tr
              th  STT
              th  Hình ảnh
              th  Hãng xe
              th  Giá
              th  Trạng thái
              th  Hoạt động
          tbody
            each item,index in listcar


              tr

                td #{index+1}

                td 
                  img(src=item.thumbnail,width="200px",height="auto")
                td #{item.title}
                td #{item.price}$
                td 
                  if (item.status=="active") 
                    a(
                   
                      class="badge rounded-pill text-bg-primary") Đang hoạt động
                  else 
                    a(
                     
                      class="badge rounded-pill text-bg-danger") Dừng hoạt động 
                td
                  button(class="btn btn-warning btn-sm") sửa
                  button(class="btn btn-danger btn-sm m1-1") xóa